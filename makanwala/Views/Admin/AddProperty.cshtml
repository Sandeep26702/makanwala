@model Property
@{
    ViewData["Title"] = "Add Property";
    Layout = "_AdminLayout";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddProperty" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label"></label>
        <input asp-for="City" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" class="form-control"
                asp-items="Html.GetEnumSelectList<PropertyType>()"></select>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Properties" class="btn btn-secondary">Cancel</a>
</form>