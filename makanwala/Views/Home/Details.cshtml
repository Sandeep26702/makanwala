@{
    ViewData["Title"] = "Property Details";
}

<!-- Similar Properties Section -->
<section class="similar-properties py-5 bg-light">
    <div class="container">
        <h2 class="mb-5 text-center">Similar Properties</h2>
        <div class="row">
          
                <div class="col-lg-4 col-md-6 mb-4">
                    <!-- ... card content ... -->
                    <a asp-controller="Home"
                       asp-action="Details"
                       asp-route-id="Id"
                       class="btn btn-outline-danger w-100">
                        <i class="fas fa-search me-2"></i> View Details
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<div class="property-details-page">
    <!-- Property Gallery -->
    <section class="property-gallery mb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <img src="/images/property-large.jpg" class="img-fluid rounded main-image" alt="Property Image">
                </div>
                <div class="col-lg-4">
                    <div class="row g-2">
                        <div class="col-6">
                            <img src="/images/property-thumb1.jpg" class="img-fluid rounded thumbnail" alt="Thumbnail 1">
                        </div>
                        <div class="col-6">
                            <img src="/images/property-thumb2.jpg" class="img-fluid rounded thumbnail" alt="Thumbnail 2">
                        </div>
                        <div class="col-6">
                            <img src="/images/property-thumb3.jpg" class="img-fluid rounded thumbnail" alt="Thumbnail 3">
                        </div>
                        <div class="col-6">
                            <img src="/images/property-thumb4.jpg" class="img-fluid rounded thumbnail" alt="Thumbnail 4">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Property Info Section -->
    <section class="property-info mb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="mb-0">Luxury Sea-Facing Villa</h1>
                        <span class="badge bg-danger fs-6">Premium</span>
                    </div>

                    <p class="text-muted"><i class="fas fa-map-marker-alt"></i> Beach Road, Goa, India</p>

                    <div class="features mb-4">
                        <span class="me-3"><i class="fas fa-bed"></i> 5 Bedrooms</span>
                        <span class="me-3"><i class="fas fa-bath"></i> 4 Bathrooms</span>
                        <span class="me-3"><i class="fas fa-ruler-combined"></i> 4500 sq.ft</span>
                        <span class="me-3"><i class="fas fa-car"></i> 2 Parking</span>
                    </div>

                    <h3 class="text-danger mb-4">₹4,50,00,000</h3>

                    <div class="property-description mb-5">
                        <h4 class="mb-3">About This Property</h4>
                        <p>This stunning sea-facing villa offers breathtaking ocean views from every room. The property features a private infinity pool, landscaped gardens, and direct beach access. The interior boasts high-end finishes with a modern open-concept design.</p>
                        <p>The villa includes a gourmet kitchen, home theater, and smart home technology. Located in a gated community with 24/7 security.</p>
                    </div>

                    <div class="amenities mb-5">
                        <h4 class="mb-3">Amenities</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-2"></i> Swimming Pool</li>
                                    <li><i class="fas fa-check text-success me-2"></i> Gym</li>
                                    <li><i class="fas fa-check text-success me-2"></i> Garden</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-2"></i> Security System</li>
                                    <li><i class="fas fa-check text-success me-2"></i> Central AC</li>
                                    <li><i class="fas fa-check text-success me-2"></i> Smart Home</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Buy Now Section -->
                <div class="col-lg-4">
                    <div class="card shadow-sm border-0 sticky-top" style="top: 20px;">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Interested in this property?</h4>

                            <div class="d-grid gap-2 mb-4">
                                <button class="btn btn-danger btn-lg">
                                    <i class="fas fa-hand-holding-usd me-2"></i> Buy Now
                                </button>
                                <button class="btn btn-outline-danger">
                                    <i class="fas fa-phone-alt me-2"></i> Contact Agent
                                </button>
                            </div>

                            <div class="agent-info text-center">
                                <img src="/images/agent.jpg" class="rounded-circle mb-3" width="80" alt="Agent">
                                <h5>Rajesh Sharma</h5>
                                <p class="text-muted">Senior Property Consultant</p>
                                <p><i class="fas fa-star text-warning"></i> 4.9 (128 reviews)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Similar Properties -->
    <section class="similar-properties py-5 bg-light">
        <div class="container">
            <h2 class="mb-5 text-center">Similar Properties</h2>
            <div class="row">
                <!-- Similar property cards would go here -->
            </div>
        </div>
    </section>
</div>