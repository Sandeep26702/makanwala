@{
    ViewData["Title"] = "About Red Estate";
}

<div class="about-page">
    <!-- Hero Section -->
    <section class="hero-section py-5 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-4">About Makaan Wala</h1>
                    <p class="lead">
                        Your trusted partner in real estate for over 15 years
                    </p>
                </div>
                <div class="col-lg-6">
                    <img src="~/images/a2.jpg" alt="Our Team" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </section>

    <!-- Our Story Section -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2 class="mb-4">Our Story</h2>
                    <p>
                        Founded in 2008, Red Estate began as a small family business in Mumbai with just 3 employees.
                        Today we operate across 12 cities with over 200 professionals helping clients find their dream homes.
                    </p>
                    <p>
                        What started as a passion project has grown into one of India's most trusted real estate brands.
                    </p>
                </div>
                <div class="col-lg-6">
                    <img src="~/images/a3.jpg" alt="Our Office" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </section>

