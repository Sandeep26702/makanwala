@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Modern living for everyone</h1>
                <p class="lead mb-5">
                    We provide a complete service for the sale, purchase or rental of real estate.
                    We have been operating in Spain more than 15 years.
                </p>

                <!-- Search Form -->
                <form class="search-form">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control form-control-lg" placeholder="Search by location">
                        <button class="btn btn-primary btn-lg" type="submit">Search</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-6">
                <img src="~/images/a1.jpg" alt="Modern Home" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>


<!-- Featured Properties Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Our Properties</h2>
        <div class="row">
            <!-- Property 1 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card property-card h-100 border-0 shadow-sm">
                    <div class="position-absolute top-0 start-0 m-3 bg-danger text-white px-2 py-1 rounded">Premium</div>
                    <img src="/images/a1.jpg" class="card-img-top" alt="Luxury Villa">
                    <div class="card-body">
                        <h5 class="card-title">Luxury Sea-Facing Villa</h5>
                        <p class="text-muted"><i class="fas fa-map-marker-alt"></i> Goa</p>
                        <div class="features mb-3">
                            <span><i class="fas fa-bed"></i> 5 Beds</span>
                            <span><i class="fas fa-bath"></i> 4 Baths</span>
                            <span><i class="fas fa-ruler-combined"></i> 4500 sq.ft</span>
                        </div>
                        <h4 class="text-danger mb-3">₹4.5 Cr</h4>
                        <a href="/Property/GoaVilla" class="btn btn-outline-danger w-100">View Details</a>
                    </div>
                </div>
            </div>


            <!-- Property 2 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card property-card h-100 border-0 shadow-sm">
                    <div class="position-absolute top-0 start-0 m-3 bg-danger text-white px-2 py-1 rounded">Premium</div>
                    <img src="/images/a2.jpg" class="card-img-top" alt="Penthouse">
                    <div class="card-body">
                        <h5 class="card-title">Penthouse with City View</h5>
                        <p class="text-muted"><i class="fas fa-map-marker-alt"></i> Mumbai</p>
                        <div class="features mb-3">
                            <span><i class="fas fa-bed"></i> 4 Beds</span>
                            <span><i class="fas fa-bath"></i> 3 Baths</span>
                            <span><i class="fas fa-ruler-combined"></i> 3800 sq.ft</span>
                        </div>
                        <h4 class="text-danger mb-3">₹3.2 Cr</h4>
                        <a href="/Property/MumbaiPenthouse" class="btn btn-outline-danger w-100">View Details</a>
                    </div>
                </div>
            </div>


            <!-- Property 3 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card property-card h-100 border-0 shadow-sm">
                    <div class="position-absolute top-0 start-0 m-3 bg-danger text-white px-2 py-1 rounded">New</div>
                    <img src="/images/a3.jpg" class="card-img-top" alt="Farm House">
                    <div class="card-body">
                        <h5 class="card-title">Luxury Farm House</h5>
                        <p class="text-muted"><i class="fas fa-map-marker-alt"></i> Bangalore</p>
                        <div class="features mb-3">
                            <span><i class="fas fa-bed"></i> 6 Beds</span>
                            <span><i class="fas fa-bath"></i> 5 Baths</span>
                            <span><i class="fas fa-ruler-combined"></i> 2 Acres</span>
                        </div>
                        <h4 class="text-danger mb-3">₹5.8 Cr</h4>
                        <a href="/Property/BangaloreFarmhouse" class="btn btn-outline-danger w-100">View Details</a>
                    </div>
                </div>
            </div>

        <!-- View All Button -->
        <div class="text-center mt-4">
            <a href="#" class="btn btn-danger px-4">
                <i class="fas fa-eye me-2"></i> View All Properties
            </a>
        </div>
    </div>
</section>