@{
    ViewData["Title"] = "Contact Us";
}

<div class="contact-page">
    <!-- Contact Header -->
    <section class="contact-header py-5 bg-info">
        <div class="container text-center">
            <h1 class="display-4">Get in Touch</h1>
            <p class="lead">We'd love to hear from you</p>
        </div>
    </section>

    <!-- Contact Form -->
    <section class="contact-form py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <form>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="name" class="form-label">Full Name</label>
                                        <input type="text" class="form-control" id="name" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="email" class="form-label">Email Address</label>
                                        <input type="email" class="form-control" id="email" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Subject</label>
                                    <input type="text" class="form-control" id="subject" required>
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" rows="5" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-danger btn-lg w-100">
                                    <i class="fas fa-paper-plane me-2"></i> Send Message
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Info -->
    <section class="contact-info py-5 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <div class="p-4 rounded bg-white shadow-sm">
                        <i class="fas fa-map-marker-alt fa-2x text-danger mb-3"></i>
                        <h5>Our Office</h5>
                        <p class="mb-0">123 Real Estate Avenue<br>Mumbai, India 400001</p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="p-4 rounded bg-white shadow-sm">
                        <i class="fas fa-phone-alt fa-2x text-danger mb-3"></i>
                        <h5>Call Us</h5>
                        <p class="mb-0">+91 98765 43210<br>Mon-Sat, 10AM-7PM</p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="p-4 rounded bg-white shadow-sm">
                        <i class="fas fa-envelope fa-2x text-danger mb-3"></i>
                        <h5>Email Us</h5>
                        <p class="mb-0">info@redestate.com<br>support@redestate.com</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>