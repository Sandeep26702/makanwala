    <section class="hero-banner py-5 bg-danger text-white">
        <div class="container text-center">
            <h1 class="display-4 fw-bold">Exclusive Properties</h1>
            <p class="lead">Our most premium listings handpicked for you</p>
        </div>
    </section>

