@{
    ViewData["Title"] = "Luxury Villa (Goa)";
}

<div class="container py-5">
    <h1>Luxury Sea-Facing Villa</h1>
    <p class="text-muted"><i class="fas fa-map-marker-alt"></i> Goa</p>

    <div class="row">
        <div class="col-md-8">
            <!-- मुख्य इमेज -->
            <img src="/images/goa-villa.jpg" class="img-fluid rounded mb-4" alt="Goa Villa">

            <!-- डिस्क्रिप्शन -->
            <div class="mb-5">
                <h4>Description</h4>
                <p>Premium beachfront villa with private pool, jacuzzi, and stunning ocean views.</p>
