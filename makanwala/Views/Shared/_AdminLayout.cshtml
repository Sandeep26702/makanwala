<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .admin-sidebar {
            width: 250px;
            min-height: 100vh;
            background: #343a40;
        }

        .admin-main {
            flex: 1;
            padding: 20px;
        }

        .sidebar-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 10px 15px;
            display: block;
        }

            .sidebar-link:hover, .sidebar-link.active {
                color: white;
                background: rgba(255, 255, 255, 0.1);
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="admin-sidebar text-white">
            <div class="p-3">
                <h4>RealEstate Admin</h4>
            </div>
            <nav class="nav flex-column">
                <a class="sidebar-link" asp-controller="Admin" asp-action="Dashboard">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a class="sidebar-link" asp-controller="Admin" asp-action="Properties">
                    <i class="bi bi-house-door me-2"></i> Properties
                </a>
                <a class="sidebar-link" href="#">
                    <i class="bi bi-people me-2"></i> Users
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="admin-main">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>